{{!-- Single Post Template --}}
{{> post-info post}}

{{!-- Display Form and comments - ONLY if loggedIn --}}
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea class="ml-5" name="comment-body"></textarea>
    </div>

    <div>
        <button class="button is-warning ml-5 mb-5" type="submit">Add Comment</button>
    </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
{{!-- JavaScript Comments Logic Link --}}
<script src="/javascript/comment.js"></script>
{{/if}}