{{!-- Create a Post template --}}
{{#if loggedIn}}
<section>
    <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
    <h2 class="title">Create New Journal Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title: </label>
            <input class="input" type="text" id="post-title" name="post-title" placeholder="Insert Journal title here!" />
        </div>

        <div>
            <label for="post-content">Content: </label>
            <input class="textarea is-large" id="post-content" name="post-content" placeholder="Insert Journal content here!" />
        </div>

        <button type="submit" class="button is-info is-pulled-right">Create Post</button>
    </form>
</section>

{{!-- JavaScript Add-Post Logic Link --}}
<script src="/javascript/add-post.js"></script>
{{/if}}